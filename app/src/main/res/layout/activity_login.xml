<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_gris"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/ivLogoPrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:src="@mipmap/logo"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="@dimen/activity_horizontal_margin">

            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edUsuario"
               style="@style/Editext"
                android:drawableLeft="@mipmap/icon_usuario"
                android:drawablePadding="20dp"
                android:hint="Usuario"/>


            <EditText
                android:id="@+id/edPassword"
                style="@style/Editext"
                android:drawableLeft="@mipmap/icon_pass"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/edUsuario"
                android:drawablePadding="20dp"
                android:hint="Contraseña"/>

            <CheckBox
                android:id="@+id/cbRecordarme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Recordar contraseña"
                android:layout_centerHorizontal="true"
                android:buttonTint="@color/md_white_1000"
                android:textColor="@color/md_white_1000"
                android:textStyle="italic"
                android:layout_below="@+id/edPassword"/>
            
            <Button
                android:id="@+id/btnIniciarSession"
                style="@style/ButtonCustom"
                android:layout_alignParentBottom="true"
                android:paddingHorizontal="20dp"
                android:text="Iniciar Sessión"/>

        </RelativeLayout>


    </LinearLayout>




</RelativeLayout>