<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".menu.Perfil">


    <ImageView
        android:id="@+id/ivImgPerfil"
        android:layout_width="@dimen/size_img_perfil"
        android:layout_height="@dimen/size_img_perfil"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/avatar_profile"
        android:visibility="visible"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tvNameUsuario"
        style="@style/TextInfoPerfil"
        android:layout_below="@+id/ivImgPerfil"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvDocuUsuario"
        style="@style/TextInfoPerfil"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvNameUsuario" />

    <Button
        android:id="@+id/btnChangePrint"
        style="@style/ButtonCustomEnable"
        android:layout_above="@+id/btnCerrarSession"
        android:layout_marginBottom="10dp"
        android:text="Cambiar Impresora" />

    <Button
        android:id="@+id/btnCerrarSession"
        style="@style/ButtonCustomEnable"
        android:text="Cerrar SesiÃ³n"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>